{
  "name": "compilation-info-webpack-plugin",
  "version": "0.2.0",
  "description": "Plugin allowing to render compilation information as additional outputs.",
  "main": "./dist/index.js",
  "typings": "./types/index.d.ts",
  "scripts": {
    "init": "yarn install --frozen-lockfile",
    "dev": "webpack --mode development -w",
    "prod": "webpack --mode production",
    "prepublishOnly": "npm run prod",
    "test": "jest --no-cache --testEnvironment node"
  },
  "author": "Lukáš Novotný",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kukkimonsuta/compilation-info-webpack-plugin.git"
  },
  "keywords": [
    "webpack"
  ],
  "dependencies": {
    "handlebars": "^4.7.6"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.16",
    "@types/webpack": "^4.41.25",
    "jest": "^26.6.3",
    "ts-loader": "^8.0.12",
    "typescript": "^4.1.3",
    "webpack": "^5.11.0",
    "webpack-cli": "^4.2.0"
  },
  "peerDependencies": {
    "webpack": "^4.0.0 || ^5.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/test/framework/preprocessor.js"
    },
    "testRegex": "/test/.*\\.ts$"
  }
}
